<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/thinglayout" >

    <TextView
        android:id="@+id/thingname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:isScrollContainer="true"
        android:text="@+id/thingname"
        android:textSize="20sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/thingdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:isScrollContainer="true"
        android:text="@+id/thingdescription"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/thingtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/thingdescription"
        android:layout_alignParentLeft="true"
        android:isScrollContainer="true"
        android:text="@+id/thingtype"
        android:textColor="#000000"
        android:textSize="15sp" />
    
</RelativeLayout>